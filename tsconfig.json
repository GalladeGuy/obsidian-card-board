{
  "compilerOptions": {
    "baseUrl": ".",
    "esModuleInterop": true,
    "inlineSourceMap": true,
    "inlineSources": true,
    "allowSyntheticDefaultImports": true,
    "module": "ESNext",
    "target": "es5",
    "allowJs": true,
    "noImplicitAny": true,
    "moduleResolution": "node",
    "importHelpers": true,
    "lib": [
      "dom",
      "es6",
      "scripthost",
      "es2020"
    ]
  },
  "include": [
    "typescript/**/*.ts"
  ]
}
